<header class='sheet-header'>
  <div class="grid grid-2col flexrow" style="margin-top: -10px;">
    <div class="flexcol" style="max-width: 70px">
      <img
        class='profile-img'
        src='{{item.img}}'
        data-edit='img'
        data-action='editImage'
        title='{{item.name}}'
      />
      {{#if (eq item.type 'equipment')}}
        <div title="{{localize 'CRASK.Item.multiAttrition.title'}}" style="text-align: center;">
          <label for="multiAttrition" class="resource-label" style="font-size: 11px;">{{localize 'CRASK.Item.multiAttrition.label'}}</label>
          <input type="checkbox" name="system.hasMultiAttrition" {{checked item.system.hasMultiAttrition}}>
        </div>
      {{/if}}
    </div>
    <div class='item-header'>
      <h1 class='charname'>
        <input name='name' type='text' value='{{item.name}}' placeholder='Name' />
      </h1>

      {{! Equipment Header }}
      {{#if (eq item.type 'equipment')}}
        <div class='grid grid-4col flexrow'>
          <div class='resource flexcol'>
            <label for='item-damage' class='resource-label'>{{localize 'CRASK.Item.dmg.label'}}</label>
            <input
              id='item-damage'
              type='text'
              name='system.damage'
              value='{{item.system.damage}}'
              data-dtype='String'
            />
          </div>
          <div class='resource flexcol'>
            <label for='item-defense' class='resource-label'>{{localize 'CRASK.Item.def.label'}}</label>
            <input
              id='item-defense'
              type='text'
              name='system.defense'
              value='{{item.system.defense}}'
              data-dtype='Number'
            />
          </div>
          <div class='resource flexcol'>
            <label for='item-cost' class='resource-label'>{{localize 'CRASK.Item.cost.label'}}</label>
            <input
              id='item-cost'
              type='text'
              name='system.cost'
              value='{{item.system.cost}}'
              data-dtype='Number'
            />
          </div>       
          <div class="resource flexcol" style="min-width: 90px;">
            <label for="current-item-uses" class='resource-label'>{{localize 'CRASK.Item.uses.label'}}</label>
            <div class='flexrow'>
              <input
                id="current-item-uses"
                type='number'
                name='system.uses.current'
                value={{item.system.uses.current}}
                data-dtype='Number'
              />
              <span style="margin: 0 5px;"> / </span>
              <input
                id="max-item-uses"
                type='number'
                name='system.uses.max'
                value={{item.system.uses.max}}
                data-dtype='Number'
              />
          </div>
        </div>
      {{/if}}

      {{! Small Item Header }}
      {{#if (eq item.type 'smallitem')}}
        <div class='grid grid-4col flexrow'>
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.dmg.label'}}</label>
            <input
              type='text'
              name='system.damage'
              value='{{system.damage}}'
              data-dtype='String'
            />
          </div>
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.def.label'}}</label>
            <input
              type='text'
              name='system.defense'
              value='{{system.defense}}'
              data-dtype='Number'
            />
          </div>
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.cost.label'}}</label>
            <input
              type='text'
              name='system.cost'
              value='{{system.cost}}'
              data-dtype='Number'
            />
          </div>       
          <div class="resource flexcol"  style="min-width: 90px;">
            <label class='resource-label'>{{localize 'CRASK.Item.uses.label'}}</label>
            <div class='flexrow'>
              <input
                id="current-item-uses"
                type='number'
                name='system.uses.current'
                value={{item.system.uses.current}}
                data-dtype='Number'
                style="width: 30px; text-align: center;"
              />
              <span style="margin: 0 5px;"> / </span>
              <input
                id="max-item-uses"
                type='number'
                name='system.uses.max'
                value={{item.system.uses.max}}
                data-dtype='Number'
                style="width: 30px; text-align: center;"
              />
          </div>
        </div>
      {{/if}}

      {{! Skill Header}}
      {{#if (eq item.type 'skill')}}
        <div class='grid grid-2col' style="margin: -10px 0px;">
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.target.label'}}</label>
            <input
              type='text'
              name='system.cost'
              value='{{system.cost}}'
              data-dtype='Number'
            />
          </div>       
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.modifiers.label'}}</label>
            <input
              type='number'
              name='system.modifier'
              value='{{system.modifier}}'
              data-dtype='Number'
            />
          </div>  
        </div>
      {{/if}}

      {{! Spell Header }}
      {{#if (eq item.type 'spell')}}
        <div class='grid grid-3col' style="margin: -10px 0px;">
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.effect.label'}}</label>
            <input
              type='text'
              name='system.effect'
              value='{{system.effect}}'
              data-dtype='String'
            />
          </div>
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.def.label'}}</label>
            <input
              type='text'
              name='system.defense'
              value='{{system.defense}}'
              data-dtype='Number'
            />
          </div>
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.cost.label'}}</label>
            <input
              type='text'
              name='system.cost'
              value='{{system.cost}}'
              data-dtype='Number'
            />
          </div>
        </div>
        <div class="grid grid-3col" style="margin: -10px 0px;"> 
          <div class="resource flexcol">
            <label class='resource-label'>{{localize 'CRASK.Item.uses.label'}}</label>
            <div class='flexrow'>
              <input
                id="current-item-uses"
                type='number'
                name='system.uses.current'
                value={{item.system.uses.current}}
                data-dtype='Number'
              />
              <span style="margin: 0 5px;"> / </span>
              <input
                id="max-item-uses"
                type='number'
                name='system.uses.max'
                value={{item.system.uses.max}}
                data-dtype='Number'
              />
            </div>
          </div>
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.range.label'}}</label>
            <select name='system.range' data-dtype='String'>
              <option value="NA" {{#ifEquals system.range "NA"}}selected{{/ifEquals}}>{{localize 'CRASK.Item.range.na'}}</option>
              <option value="Touch" {{#ifEquals system.range "Touch"}}selected{{/ifEquals}}>{{localize 'CRASK.Item.range.touch'}}</option>
              <option value="Ranged" {{#ifEquals system.range "Ranged"}}selected{{/ifEquals}}>{{localize 'CRASK.Item.range.ranged'}}</option>
              <option value="Area" {{#ifEquals system.range "Area"}}selected{{/ifEquals}}>{{localize 'CRASK.Item.range.area'}}</option>
            </select>
          </div>
          <div class='resource flexcol'>
            <label class='resource-label'>{{localize 'CRASK.Item.duration.label'}}</label>
            <input
              type='text'
              name='system.duration'
              value='{{system.duration}}'
              data-dtype='String'
            />
          </div> 
        </div>
        </div>
      {{/if}}

      {{! Reward Header}}
      {{#if (eq item.type 'reward')}}
        <div class='resource flexrow'>
          <label class='resource-label' style="max-width: 100px;">{{localize 'CRASK.Item.value.label'}}: </label>
          <input
            type='text'
            name='system.cost'
            value='{{system.cost}}'
            data-dtype='Number'
          />
        </div>
      {{/if}}

      {{! Large Item Header}}
      {{#if (eq item.type 'largeitem')}}
        <div class='resource flexrow'>
          <label class='resource-label' style="max-width: 100px;">{{localize 'CRASK.Item.value.label'}}: </label>
          <input
            type='text'
            name='system.cost'
            value='{{system.cost}}'
            data-dtype='Number'
          />
        </div>
      {{/if}}

      {{! Advancement Header}}
      {{#if (eq item.type 'advancement')}}
        <div class='resource flexrow'>
          <label class='resource-label' style="max-width: 100px;">{{localize 'CRASK.Item.value.label'}}: </label>
          <input
            type='text'
            name='system.cost'
            value='{{system.cost}}'
            data-dtype='Number'
          />
        </div>
      {{/if}}

      {{! Companion Header}}
      {{#if (eq item.type 'companion')}}
        <div class='resource flexrow'>
          <label class='resource-label' style="max-width: 100px;">{{localize 'CRASK.Item.value.label'}}: </label>
          <input
            type='text'
            name='system.cost'
            value='{{system.cost}}'
            data-dtype='Number'
          />
        </div>
      {{/if}}
    </div>
  </div>
</header>