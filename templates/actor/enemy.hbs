{{! Enemy Sheet }}
<section data-tab='enemy'>

    {{! Header First Row}}
    <div class='grid grid-2col flexrow enemy-header'>

        {{! First Column Character Image}}
        <img
            class='profile-img'
            src='{{actor.img}}'
            data-edit='img'
            title='{{actor.name}}'
            height='120'
            width='120'
            data-action="editImage"
        />

        {{! Second Column Information}}
        <div class='flexcol'>
            <h1 class='charname'>
                <input name='name' type='text' value='{{actor.name}}' placeholder='Name' />
            </h1>
            <input style="margin-left: 10px; width: 96%; text-align: center; margin-top: 10px;"
                id="enemy-description"
                type='text'
                name='system.shortdescription'
                value='{{system.shortdescription}}'
                data-dtype='String'
            />
        </div>
    </div>

    <div class="grid grid-2col flexrow enemy-body">
        <div class='flexcol enemy-stats'>

            {{! HP Row }}
            <label class='resource-label'>{{localize 'CRASK.Actor.base.FIELDS.hp.label'}}</label>
            <div class='flexrow'>
              <input
                id="current-hp"
                type='number'
                name='system.hitpoints.current'
                value={{system.hitpoints.current}}
                data-dtype='Number'
              />
              <span style="padding-bottom: 10px;"> / </span>
              <input
                id="max-hp"
                type='number'
                name='system.hitpoints.max'
                value={{system.hitpoints.max}}
                data-dtype='Number'
              />
            </div>

            {{! ATK / DEF Row }}
            <div class="grid grid-2col flexrow" style="padding: 0px;">
                <div class="flexcol">
                    <label class='resource-label'>{{localize 'CRASK.Actor.base.FIELDS.atk.label'}}</label>
                    <input
                    type='number'
                    name='system.attack'
                    value={{system.attack}}
                    data-dtype='Number'
                    />
                </div>

                <div class="flexcol">
                    <label class='resource-label'>{{localize 'CRASK.Actor.base.FIELDS.def.label'}}</label>
                    <input
                    type='number'
                    name='system.defense'
                    value='{{system.defense}}'
                    data-dtype='Number'
                    />
                </div>
            </div>

            {{! Tactics Row }}
            <label class='resource-label'>{{localize 'CRASK.Actor.base.FIELDS.tactics.label'}}</label>
            <input
              type='number'
              name='system.tactics.number'
              value='{{system.tactics.number}}'
              data-dtype='Number'
            />

            {{! Phases Row }}
            <label class='resource-label'>{{localize 'CRASK.Actor.base.FIELDS.phases.label'}}</label>

            <div class="resource-content sheet-phase-selector flexrow">
                <label class="phase-label">
                    <input type="checkbox" name="system.phases" class="phase-checkbox" data-action="checkboxChange" value="1" {{checked (includes 1 system.phases)}}>
                </label>
                <label class="phase-label"> 
                    <input type="checkbox" name="system.phases" class="phase-checkbox" data-action="checkboxChange" value="2" {{checked (includes 2 system.phases)}}>
                </label>
                <label class="phase-label">
                    <input type="checkbox" name="system.phases" class="phase-checkbox" data-action="checkboxChange" value="3" {{checked (includes 3 system.phases)}}>
                </label>
                <label class="phase-label">
                    <input type="checkbox" name="system.phases" class="phase-checkbox" data-action="checkboxChange" value="4" {{checked (includes 4 system.phases)}}>
                </label>
                <label class="phase-label">
                    <input type="checkbox" name="system.phases" class="phase-checkbox" data-action="checkboxChange" value="5" {{checked (includes 5 system.phases)}}>
                </label>
            </div>

            {{! Buttons }}
            <div class="grid grid-2col flexrow" style="gap: 25px;">
                {{! Phase Selector }}
                <img
                    class="clickable"
                    src="systems/crown-and-skull/assets/icons/Black/Initiative.svg"
                    title="Push to Combat Tracker"
                    data-action="initiativePush"
                    style="max-width: 40px;"
                />

                {{! Tactics Roll }}
                <img
                    class="clickable"
                    src="systems/crown-and-skull/assets/icons/Black/TacticDie.svg"
                    title="Roll Tactic"
                    data-action="rollTactic"
                    style="max-width: 40px;"
                />

            </div>

        </div>
        <div class="flexcol" style="align-self: flex-start;">

            <h3>{{localize 'CRASK.Actor.base.FIELDS.tactic1.label'}}</h3>
            <textarea id="tactic1" name="system.tactics.move" rows="4" cols="10">{{{system.tactics.move}}}</textarea>

            <h3>{{localize 'CRASK.Actor.base.FIELDS.tactic25.label'}}</h3>
            <textarea id="tactic25" name="system.tactics.melee" rows="4" cols="10">{{{system.tactics.melee}}}</textarea>

            <h3>{{localize 'CRASK.Actor.base.FIELDS.tactic6.label'}}</h3>
            <textarea id="tactic6" name="system.tactics.area" rows="4" cols="10">{{{system.tactics.area}}}</textarea>

        </div>

    </div>

    {{! Editable Enemy Description Section }}
    <h2>{{localize 'CRASK.Actor.base.FIELDS.enemydescription.label'}}</h2>
    {{#if editable}} 
    <prose-mirror name="system.biography" data-document-u-u-i-d="{{actor.uuid}}" value="{{system.biography}}" collaborate="true" toggled="true">
      {{{enrichedBiography}}}
    </prose-mirror>
    {{else}} {{{enrichedBiography}}}
    {{/if}}

</section>