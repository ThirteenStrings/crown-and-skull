{{!-- Equipment Tab --}}
<section class='tab equipment {{tab.cssClass}} fixoverflow' data-group='primary' data-tab='equipment' style="overflow-y: auto; max-height: 540px;">

  {{!-- Regular Items --}}
  <ul class="tab-list grid grid-2col" style="margin-top: 5px;">
    {{#each equipment as |item id|}}
    <li class='item equipment flexcol {{#if item.system.uses.max}}{{#ifEquals item.system.uses.current 0}}zero-uses{{/ifEquals}}{{/if}} {{#if item.system.damaged}}damaged{{/if}}' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
      <!-- First Row -->
      <div class="flexrow" style="height: 57px;">
        <div class="item-image" style="margin-right: 5px;">
          <a data-action='viewDoc'>
            <img src='{{item.img}}' title='{{item.name}}' width='40' height='40'/>
          </a>
        </div>
        <div class="flexcol">
          <div class='item-name'>{{item.name}}</div>
          <div class='item-description'>{{{item.system.enrichedDescription}}}</div>
        </div>
      </div>
      {{!-- Control Row --}}
      <div class="flexrow">
        {{#if @root.editable}}
          <a class='item-control item-delete small-control' title='{{localize "DOCUMENT.Delete" type='Equipment'}}' data-action='deleteDoc'>
            <i class='fas fa-trash'></i>
          </a>
        {{/if}}
        <div class="small-control" title="Hero Point Cost: {{#if item.system.cost}}{{item.system.cost}}{{else}}-{{/if}}"><i class="fas fa-coins"></i></div>
        <div class="toggle-state small-control clickable" title="{{#if item.system.damaged}}Damaged: Click to Repair{{else}}Intact: Click to Break{{/if}}" data-action="dmgToggle">
            <i class="fas {{#if item.system.damaged}}fa-heart-crack{{else}}fa-heart{{/if}}"></i>
        </div>
        {{#if item.system.def}}
          <div title="Defense{{#if item.system.equipped}}: Currently Equipped, Click to Doff{{else}}: Not Currently Equipped, Click to Don{{/if}}" class="clickable" data-action="equipToggle"><i class="fas {{#if item.system.equipped}}fa-shield{{else}}fa-shield-halved{{/if}}"></i> 
            {{#if item.system.equipped}}{{item.system.def}}{{else}}-{{/if}}
          </div>
        {{/if}}
        {{#if item.system.uses.max}}
          <div title="Uses Remaining, Click to Decrease, Ctr+Click to Increase" class="uses-remaining clickable" data-action="updateUses">
            <i class="fas fa-bolt"></i> {{item.system.uses.current}}/{{item.system.uses.max}}
          </div>
        {{/if}}
        {{#if item.system.dmg}}
          <div title="Damage" class="rollable" data-roll-type="item" data-action="roll"><i class="fas fa-swords"></i> {{item.system.dmg}}</div>
        {{/if}}
      </div>
    </li>
    {{/each}}
  </ul>

  {{!-- Herbalist Pouch --}}
  {{#ifGreaterThan flora.length 0}}
    <h2 title="Requires Herbalist Pouch in Equipment">{{localize 'CRASK.Actor.base.FIELDS.herbalistpouch.label'}}</h2>
    <div class="tab-list grid grid-4col" style="margin-top: 5px;">
      {{#each flora as |item id|}}
          <li class='item smallitem flexrow {{#if item.system.damaged}}damaged{{/if}} {{#if item.system.uses.max}}{{#ifEquals item.system.uses.current 0}}zero-uses{{/ifEquals}}{{/if}}' 
              data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
            <!-- Item image and controls -->
            <div class="left-simple flexcol">
              <div class='item-image'>
                  <a data-action='viewDoc'>
                  <img src='{{item.img}}' title='{{item.name}}' width='40' height='40'/>
                  </a>
              </div>
              <div class='item-controls flexrow'>
                  {{#if @root.editable}}
                  <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Flora'}}' data-action='deleteDoc'>
                      <i class='fas fa-trash'></i>
                  </a>
                  {{/if}}
              </div>
            </div>
            <!-- Item details -->
            <div class="flexcol">
              <div class='item-name'>{{item.name}}</div>
              <div class='item-description line3'>{{{item.system.enrichedDescription}}}</div>
            </div>
          </li>
      {{/each}}
    </div>
  {{/ifGreaterThan}}

  {{!-- Item Pouch --}}
  {{#ifGreaterThan smallitems.length 0}}
    <h2 title="Requires Pouch in Inventory">{{localize 'CRASK.Actor.base.FIELDS.itempouch.label'}}</h2>
    <div class="tab-list grid grid-4col" style="margin-top: 5px;">
      {{#each smallitems as |item id|}}
        <li class='item smallitem flexrow {{#if item.system.damaged}}damaged{{/if}} {{#if item.system.uses.max}}{{#ifEquals item.system.uses.current 0}}zero-uses{{/ifEquals}}{{/if}}' 
            data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
          <!-- Item image and controls -->
          <div class="left-simple flexcol" style="max-width: 35px;">
            <div class='item-image'>
                <a data-action='viewDoc'>
                <img src='{{item.img}}' title='{{item.name}}' width='30' height='30'/>
                </a>
            </div>
            <div class='item-controls flexrow'>
                {{#if @root.editable}}
                <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Small Item'}}' data-action='deleteDoc'>
                    <i class='fas fa-trash'></i>
                </a>
                {{/if}}
                <div title="Hero Point Cost: {{#if item.system.cost}}{{item.system.cost}}{{else}}-{{/if}}" style="margin-left: 5px;"><i class="fas fa-coins"></i></div>
            </div>
          </div>
          <!-- Item details -->
          <div class="flexcol">
            <div class='item-name' title="{{item.system.enrichedDescription}}">{{item.name}}</div>
            <div class='item-details'>
                <div class="toggle-state clickable" title="{{#if item.system.damaged}}Damaged: Click to Repair{{else}}Intact: Click to Break{{/if}}" data-action="dmgToggle" style="max-width: 35px">
                    <i class="fas {{#if item.system.damaged}}fa-heart-crack{{else}}fa-heart{{/if}}"></i>
                </div>
                {{#if item.system.dmg}}
                    <div title="Damage" class="rollable" data-roll-type="item" data-action="roll"><i class="fas fa-swords"></i> {{item.system.dmg}}</div>
                {{/if}}
            </div>
            <div class="item-details">
                {{#if item.system.def}}
                    <div title="Defense{{#if item.system.equipped}}: Currently Equipped, Click to Doff{{else}}: Not Currently Equipped, Click to Don{{/if}}" class="clickable" data-action="equipToggle"><i class="fas {{#if item.system.equipped}}fa-shield{{else}}fa-shield-halved{{/if}}"  style="max-width: 35px"></i> 
                        {{#if item.system.equipped}}{{item.system.def}}{{else}}-{{/if}}
                    </div>
                {{/if}}
                {{#if item.system.uses.max}}
                    <div title="Uses Remaining, Click to Decrease, Ctr+Click to Increase" class="uses-remaining clickable" data-action="updateUses">
                        <i class="fas fa-bolt"></i> {{item.system.uses.current}}/{{item.system.uses.max}}
                    </div>
                {{/if}}
            </div>
          </div>
        </li>
      {{/each}}
    </div>
  {{/ifGreaterThan}}

  {{! Large Items }}
  {{#ifGreaterThan largeitems.length 0}}
    <h2 style="margin-top:10px;">{{localize 'CRASK.Actor.base.FIELDS.largeitems.label'}}</h2>
    <ul class="tab-list grid grid-2col" style="margin-top: 5px;">
      {{#each largeitems as |item id|}}
      <li class='item equipment flexcol {{#if item.system.damaged}}damaged{{/if}} {{#if item.system.uses.max}}{{#ifEquals item.system.uses.current 0}}zero-uses{{/ifEquals}}{{/if}}' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
        <!-- First Row -->
        <div class="flexrow" style="height: 57px;">
          <div class="item-image" stlye="margin-right: 5px;">
            <a data-action='viewDoc'>
              <img src='{{item.img}}' title='{{item.name}}' width='40' height='40'/>
            </a>
          </div>
          <div class="flexcol">
            <div class='item-name'><b>{{item.name}}</b></div>
            <div class='item-description line3'>{{{item.system.enrichedDescription}}}</div>
          </div>
        </div>
        {{!-- Control Row --}}
        <div class="flexrow">
          {{#if @root.editable}}
            <a class='item-control item-delete small-control' title='{{localize "DOCUMENT.Delete" type='Equipment'}}' data-action='deleteDoc'>
              <i class='fas fa-trash'></i>
            </a>
          {{/if}}
          <div class="small-control" title="Hero Point Cost: {{#if item.system.cost}}{{item.system.cost}}{{else}}-{{/if}}"><i class="fas fa-coins"></i></div>
          <div class="toggle-state small-control clickable" title="{{#if item.system.damaged}}Damaged: Click to Repair{{else}}Intact: Click to Break{{/if}}" data-action="dmgToggle">
              <i class="fas {{#if item.system.damaged}}fa-heart-crack{{else}}fa-heart{{/if}}"></i>
            </div>
            {{#if item.system.def}}
              <div title="Defense{{#if item.system.equipped}}: Currently Equipped, Click to Doff{{else}}: Not Currently Equipped, Click to Don{{/if}}" class="clickable" data-action="equipToggle"><i class="fas {{#if item.system.equipped}}fa-shield{{else}}fa-shield-halved{{/if}}"></i> 
                {{#if item.system.equipped}}{{item.system.def}}{{else}}-{{/if}}
              </div>
            {{/if}}
            {{#if item.system.uses.max}}
              <div title="Uses Remaining, Click to Decrease, Ctr+Click to Increase" class="uses-remaining clickable" data-action="updateUses">
                <i class="fas fa-bolt"></i> {{item.system.uses.current}}/{{item.system.uses.max}}
              </div>
            {{/if}}
            {{#if item.system.dmg}}
              <div title="Damage" class="rollable" data-roll-type="item" data-action="roll"><i class="fas fa-swords"></i> {{item.system.dmg}}</div>
            {{/if}}
        </div>
      </li>
      {{/each}}
    </ul>
  {{/ifGreaterThan}}

</section>