{{! Sheet Header }}
<header class='sheet-header'>

  {{! Main Header Row}}
  <div class="grid grid-3col flexrow">

    {{! Hero Points Section}}
    <div class='hero-points-wrapper'>
      <div class='resource-label hero-points-label-container'>
        {{localize 'CRASK.Actor.base.FIELDS.heropoints.label'}}
      </div>
      <div class="grid grid-4col hero-points-input-container" title="Current Hero Points (Accounted for on sheet)">
        <div class="input-wrapper flexcol">
          <label for="current-hero-points" class="hero-points-label">Curr</label>
          <input
            id="current-hero-points"
            type='number'
            name='system.heropoints.used'
            value={{actor.system.heropoints.spent}}
            data-dtype='Number'
            {{#if autoCalc}}readonly{{/if}}
          />
        </div>
        <div class="input-wrapper flexcol" title="Max Hero Points Available (50 + Rewards)">
          <label for="max-hero-points" class="hero-points-label">Max</label>
          <input
            id="max-hero-points"
            type='number'
            name='system.heropoints.max'
            value={{actor.system.heropoints.max}}
            data-dtype='Number'
            {{#if autoCalc}}readonly{{/if}}
          />
        </div>
        <div class="input-wrapper flexcol" title="Remaining Hero Points">
          <label for="remaining-hero-points" class="hero-points-label">Rem</label>
          <input
            id="remaining-hero-points"
            type='number'
            name='system.heropoints.remaining'
            value={{actor.system.heropoints.remaining}}
            data-dtype='Number'
            {{#if autoCalc}}readonly{{/if}}
          />
        </div>
        <div class="input-wrapper flexcol" title="Hero Points Lost to Consumables and Destroyed Equipment">
          <label for="lost-hero-points" class="hero-points-label">{{localize 'CRASK.Actor.base.FIELDS.lost.label'}}</label>
          <input
            id="lost-hero-points"
            type='number'
            name='system.heropoints.lost'
            value={{actor.system.heropoints.lost}}
            data-dtype='Number'
          />
        </div>
      </div>
    </div>

    {{! Attrition Points Section}}
    <div class='attrition-points-wrapper'>
      <div class='resource-label hero-points-label-container'>
          Attrition
      </div>
      <div class="grid grid-4col hero-points-input-container">
        
        <div class="input-wrapper flexcol" title="Roll Equipment Attrition">
          <img
            class="clickable"
            src="systems/crown-and-skull/assets/icons/Black/d10E.svg"
            data-action="rollEquipmentAttrition"
            style="max-height:50px; margin: 0px;"
          />
        </div>
        <div class="input-wrapper flexcol" title="Remaining Equipment Attrition">
          <label for="max-hero-points" class="hero-points-label flexrow">Equip</label>
          <input
            id="max-hero-points"
            type='number'
            name='system.attrition.equipment'
            value={{actor.system.attrition.equipment}}
            data-dtype='Number'
            readonly
          />
        </div>
        <div class="input-wrapper flexcol" title="Remaining Flesh Attrition">
          <label for="current-hero-points" class="hero-points-label flexrow">Flesh</label>
          <input
            id="current-hero-points"
            type='number'
            name='system.attrition.flesh'
            value={{actor.system.attrition.flesh}}
            data-dtype='Number'
            readonly
          />
        </div>
        <div class="input-wrapper flexcol" title="Roll Flesh Attrition">
          <img
            class="clickable"
            src="systems/crown-and-skull/assets/icons/Black/d10F.svg"
            data-action="rollFleshAttrition"
            style="max-height:50px; margin: 0px;"
          />
        </div>
      </div>
    </div>

    {{! Combat Controls Section}}
    <div class="combat-wrapper">
      <div class='resource-label hero-points-label-container'>
          Combat
      </div>

      <div class="grid grid-4col hero-points-input-container">

        {{! Defense Value}}
        <div class="input-wrapper flexcol" title="Defense from Equipment.">
          <label for="max-hero-points" class="hero-points-label flexrow">Defense</label>
          <div class="flexrow defense-value clickable" title="Roll Defense ◇ Ctrl: Quick Roll" data-roll-type="Defense" data-action="skillRoll" style="padding-bottom: 4px;">
            {{actor.system.defense}}
          </div>
        </div>
        
        {{! Defense Temp Modifier}}
        <div class="input-wrapper flexcol" title="Temporary Defense Modifiers">
          <label for="temporary-defense" class="hero-points-label flexrow">Temp</label>
          <input
            id="temporary-defense"
            type='number'
            name='system.defenseModifier'
            value={{actor.system.defenseModifier}}
            data-dtype='Number'
          />
        </div>

        {{! Hero Coin }}
        <div class="input-wrapper flexcol" title="{{#if actor.system.heroCoinAvailable}}Reroll any roll entirely. ◇ or ◇ Maximize damage or effect roll.{{else}}Click to Gain Hero Coin{{/if}}">
          <label class="hero-points-label flexrow">Hero</label>
          <img
            class='clickable'
            src="systems/crown-and-skull/assets/HeroCoin{{#if actor.system.heroCoinAvailable}}{{else}}Grey{{/if}}.svg"
            data-action="useHeroCoin"
            style="margin: 0px; max-height: 32px;"
          />
        </div>

        {{! Phase Selector }}
        <div class="input-wrapper flexcol" title="Select Combat Phase">
          <label class="hero-points-label flexrow">Phase</label>
          <img
            class="clickable"
            src="systems/crown-and-skull/assets/icons/Black/Initiative.svg"
            data-action="initiativeSelect"
            style="margin: 0px; max-height: 40px;"
          />
        </div>
        
        
        
        

      </div>
    </div>

  </div>

</header>